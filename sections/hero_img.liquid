


<div class="hero_img" style="background-image: url({{ section.settings.hero_img | img_url: '2048x' }})">
	<div class="hero_img__logo">
		<img src="{{ 'i_logo.svg' | asset_url }}" alt="" />
	</div>

	{%- if section.settings.title_1 != blank -%}
		<div class="hero_img__title">{{ section.settings.title_1 }}</div>
	{%- endif -%}

	{%- if section.settings.title_2 != blank -%}
		<div class="hero_img__title">{{ section.settings.title_2 }}</div>
	{%- endif -%}

	{%- if section.settings.desc != blank -%}
		<div class="hero_img__desc">{{ section.settings.desc }}</div>
	{%- endif -%}

	<!-- {%- if section.settings.link_src != blank -%}
		<a id="btn-open" class="hero_img__btn" href="{{ section.settings.link_src }}" target="_blank">{{ section.settings.link_text }}</a>
	{%- endif -%} -->
	
	{%- if section.settings.link_src != blank -%}
		<button id="btn-open" class="hero_img__btn js-popup-show" data-popup="discount">{{ section.settings.link_text }}</button>
	{%- endif -%}
</div>



{% schema %}
	{
		"name": "Hero image bg",
		"settings": [
			{
				"type": "image_picker",
				"id": "hero_img",
				"label": "Hero image bg"
			},
			{
				"type": "text",
				"id": "title_1",
				"label": "Title 1",
				"default": "Title 1"
			},
			{
				"type": "text",
				"id": "title_2",
				"label": "Title 2",
				"default": "Title 2"
			},
			{
				"type": "text",
				"id": "desc",
				"label": "Description",
				"default": "Some description text"
			},
			{
				"type": "text",
				"id": "link_src",
				"label": "Button link",
				"default": "https..."
			},
			{
				"type": "text",
				"id": "link_text",
				"label": "Button text",
				"default": "40% OFF"
			}
		],
		"presets": [
			{
				"name": "Hero image",
				"category": "Content"
			}
		]
	}
{% endschema %}


