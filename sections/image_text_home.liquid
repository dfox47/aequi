
<div class="wrap3">
	<div class="home_advantages_list">
		<div class="home_advantages_slider">
			<div class="owl-carousel js-advantages-slider" data-autoplay="{% if section.settings.slider_autoplay %}true{%- endif -%}">
				{% for block in section.blocks %}
					<div class="home_advantages_slider__item" style="background-image: url({{ block.settings.image | img_url: '2048x' }})"></div>
				{% endfor %}
			</div>
		</div>

		<div class="home_advantages_content">
			{% if section.settings.title_1 != blank %}
				<h2>{{ section.settings.title_1 | escape }}</h2>
			{% endif %}

			{% if section.settings.subtitle_1 != blank %}
				<h3>{{ section.settings.subtitle_1 | escape }}</h3>
			{% endif %}

			{% if section.settings.text_1 != blank %}
				<div class="home_advantages_desc">{{ section.settings.text_1 }}</div>
			{% endif %}



			{% if section.settings.title_2 != blank %}
				<h2>{{ section.settings.title_2 | escape }}</h2>
			{% endif %}

			{% if section.settings.subtitle_2 != blank %}
				<h3>{{ section.settings.subtitle_2 | escape }}</h3>
			{% endif %}

			{% if section.settings.text_2 != blank %}
				<div class="home_advantages_desc">{{ section.settings.text_2 }}</div>
			{% endif %}



			{% if section.settings.title_3 != blank %}
				<h2>{{ section.settings.title_3 | escape }}</h2>
			{% endif %}

			{% if section.settings.subtitle_3 != blank %}
				<h3>{{ section.settings.subtitle_3 | escape }}</h3>
			{% endif %}

			{% if section.settings.text_3 != blank %}
				<div class="home_advantages_desc">{{ section.settings.text_3 }}</div>
			{% endif %}
		</div>
	</div>
</div>



