<div class="wrap">
	<div class="home_text_content">
		{% if section.settings.section_title != blank %}
			<h2>{{ section.settings.section_title | escape }}</h2>
		{% endif %}

		{% if section.settings.text != blank %}
			<div class="home_text_desc">{{ section.settings.text }}</div>
		{% endif %}
	</div>
</div>



{% schema %}
{
  "name": {
    "en": "Rich text home"
  },
  "class": "home_text",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "Talk about your brand"
      }
    },
    {
      "type": "richtext",
      "id": "text",
      "label": {
        "en": "Text"
      },
      "default": {
        "en": "<p>Some text...</p>"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Rich text home"
      },
      "category": {
        "en": "Text home"
      }
    }
  ]
}
{% endschema %}
